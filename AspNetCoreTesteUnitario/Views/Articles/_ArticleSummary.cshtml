@model AspNetCoreTesteUnitario.Models.Article
<div class="row article-summary">
    <div class="col-md-4">

        <p class="text-center">
            @Model.CreatedDate.ToString("dd MMM yyyy")
        </p>
    </div>
    <div class="col-md-8">
        <h4>
            <a asp-action="Details" asp-route-id="@Model.ArticleId">@Model.Title</a>
        </h4>
        <blockquote>
            <p>@Model.Abstract</p>
        </blockquote>
    </div>
</div>
